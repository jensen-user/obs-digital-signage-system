# Windows Testing Environment Configuration
ENVIRONMENT=development
CONTENT_BASE_DIR=C:\Users\User\DevProjects\obs-digital-signage-automation-system

# OBS WebSocket Settings
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=  # OBS WebSocket password (set in OBS: Tools > WebSocket Server Settings)
OBS_TIMEOUT=10
OBS_STARTUP_DELAY=15

# WebDAV/Synology Settings
# Leave empty to run in offline mode (no WebDAV sync)
WEBDAV_HOST=
WEBDAV_PORT=5006
WEBDAV_USERNAME=
WEBDAV_PASSWORD=
WEBDAV_TIMEOUT=30
WEBDAV_SYNC_INTERVAL=30
WEBDAV_ROOT_PATH=/

# Media Settings
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30  # Supports integers (24, 25, 30, 60) or decimals (23.976, 29.97, 59.94)
IMAGE_DISPLAY_TIME=15
MAX_VIDEO_DURATION=900
SLIDE_TRANSITION_SECONDS=15

# Transition Settings
# How many seconds before VIDEO ends to start the transition (e.g., stinger)
# For a 2-second stinger, set this to 2.0 to start transition 2 seconds before video end
# Note: Images always display for FULL duration, this offset only applies to videos
TRANSITION_START_OFFSET=2.0

# Audio Settings
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=2
AUDIO_BUFFER_SIZE=1024

# Logging
LOG_LEVEL=DEBUG
