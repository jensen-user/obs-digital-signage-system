# Windows Production Environment Configuration
ENVIRONMENT=production
CONTENT_BASE_DIR=C:\digital-signage

# OBS WebSocket Settings
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=88884444
OBS_TIMEOUT=10
OBS_STARTUP_DELAY=15

# WebDAV/Synology Settings
# Syncs /vaeveriet_screens_slideshow from Storebox with subfolder structure preserved
WEBDAV_HOST=https://storebox.openchurch.dk
WEBDAV_PORT=5006
WEBDAV_USERNAME=obs_slideshow
WEBDAV_PASSWORD=@vanceret2Sl!deshow4
WEBDAV_TIMEOUT=30
WEBDAV_SYNC_INTERVAL=30
WEBDAV_ROOT_PATH=/vaeveriet_screens_slideshow

# Media Settings
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=59.94
IMAGE_DISPLAY_TIME=15
MAX_VIDEO_DURATION=900
SLIDE_TRANSITION_SECONDS=15

# Transition Settings
# How many seconds before media ends to start the transition (e.g., stinger)
# For a 2-second stinger, set this to 2.0 to start transition 2 seconds before end
# Set to 0 to start transition exactly when media ends
TRANSITION_START_OFFSET=2.0

# Audio Settings
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=2
AUDIO_BUFFER_SIZE=1024

# Logging
LOG_LEVEL=INFO

# ============================================================================
# Scheduling Configuration
# ============================================================================
# Enable/disable automatic time-based scheduling
SCHEDULE_ENABLED=true
TIMEZONE=Europe/Copenhagen

# Manual content folder override (only used when SCHEDULE_ENABLED=false)
# Example: vaeveriet_screens_slideshow/sunday_service_slideshow
# Leave empty to use default content folder
MANUAL_CONTENT_FOLDER=

# Sunday Service Schedule (08:00-13:30 on Sundays, day 6=Sunday)
SUNDAY_SERVICE_FOLDER=vaeveriet_screens_slideshow/sunday_service_slideshow
SUNDAY_SERVICE_START_TIME=08:00
SUNDAY_SERVICE_END_TIME=13:30
SUNDAY_SERVICE_TRANSITION=Stinger Transition
SUNDAY_SERVICE_TRANSITION_OFFSET=2.0
SUNDAY_SERVICE_DAY=6

# Default Schedule (all other times)
DEFAULT_FOLDER=vaeveriet_screens_slideshow/default_slideshow
DEFAULT_TRANSITION=Fade
DEFAULT_TRANSITION_OFFSET=0.5

# Schedule check interval (seconds)
SCHEDULE_CHECK_INTERVAL=60
